{% extends "layout.njk" %}
{% block content %}
<main class="container">
    <h1>{{ title }}</h1>
    <form action="/forum" method="POST">
        <input type="text" name="title" placeholder="Title">
        <textarea name="body" placeholder="Body"></textarea>
        <button type="submit">Post</button>
    </form>
    {%- if error -%}
    <p>
        {{ error }}
    </p>
    {%- endif -%}
</main>
{% endblock %}